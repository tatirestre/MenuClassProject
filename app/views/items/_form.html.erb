<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :photo %>
    <%= f.input :price %>
    <%= f.input :restaurant_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success btn-sm" %>
  </div>
<% end %>
