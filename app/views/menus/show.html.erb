
<p>
  <h1>
  <%= @menu.restaurant.name %>
  </h1> 
</p>

<p>
  <h2>
  <%= @menu.name %> - Menu
  </h2>
</p>

<p>
  <strong>Date:</strong>
  <%= @menu.start_date %>
</p>

<p>
<h3>Our menu for this day is:</h3>
</p>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Photo</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%- @menu.items.each do |item| %>  
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.photo %></td>
        <td><%= item.price %></td>
      </tr>
  <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_menu_path(@menu), class: "btn btn-default" %> |
<%= link_to 'Back', menus_path, class: "btn btn-default" %>
